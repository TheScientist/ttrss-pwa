{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "ttrss-pwa": {
      "root": "",
      "sourceRoot": "src",
      "projectType": "application",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "aot": true,
            "outputPath": "dist",
            "index": "src/index.html",
            "main": "src/main.ts",
            "tsConfig": "src/tsconfig.app.json",
            "polyfills": "src/polyfills.ts",
            "serviceWorker": true,
            "assets": [
              "src/assets",
              "src/manifest.json",
              "src/manifest-dark.json",
              "src/favicon.ico"
            ],
            "styles": [
              "src/style-initial.scss",
              "src/style.scss",
              "src/mixin_global.scss",
              "src/mixin_dark.scss"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "serviceWorker": true,
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ]
            },
            "mock": {
              "budgets": [
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb"
                }
              ],
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.mock.ts"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "ttrss-pwa:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "ttrss-pwa:build:production"
            },            
            "mock": {
              "browserTarget": "ttrss-pwa:build:mock"
            }
          }
        },
        "serve-mock": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "ttrss-pwa:build:mock"
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "ttrss-pwa:build"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "src/tsconfig.app.json",
              "src/tsconfig.spec.json"
            ],
            "exclude": [
              "src/app/**/*.json",
              "**/node_modules/**"
            ]
          }
        }
      }
    },
    "ttrss-pwa-e2e": {
      "root": "",
      "sourceRoot": "",
      "projectType": "application",
      "architect": {
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "./protractor.conf.js",
            "devServerTarget": "ttrss-pwa:serve-mock"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "e2e/tsconfig.e2e.json"
            ],
            "exclude": [
              "src/app/**/*.json",
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "ttrss-pwa",
  "schematics": {
    "@schematics/angular:component": {
      "prefix": "ttrss",
      "style": "scss"
    },
    "@schematics/angular:directive": {
      "prefix": "ttrss"
    }
  }
}